  /*背景*/
  .background {
    width: 100%;
    height: 100%;
    position:fixed; 
    background-size:100% 100%;
    z-index: -1;
  }
  
  /*登录头像*/
  .userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: rgb(0, 0, 0);
  }
  
  .userinfo-avatar {
    overflow: hidden;
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
  }
  
  .usermotto {
    margin-top: 200px;
  }
  
  /*登录按钮*/
  .login {
    position: absolute;
    font-size: 40rpx;
    border-radius: 0rpx;
    background-color: #546dfa;
    color: #ffffff;
    box-shadow:0px 3px 6px 2px rgb(114, 113, 113);
  }
  .login:not([size="mini"]) {
    width: 200rpx;
    height: 95rpx;
  }

  /*个人收藏，历史记录，制作人员按钮*/
