/* 表格代码   */
.table{
  margin-top: 90px;
  border-width: 0;
  border-right: 0;
  border-bottom: 0;
  width: 98%;
  margin-left: 1%;
}
.addin{
  margin-left: 50rpx;
  margin-right: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.addin_name{
  font-size: 40rpx;
  margin: 50rpx;
  color: #161616;
  width: 40%;
}
.addin_image{
  margin: 0;
  width: 100rpx;
  height: 100rpx;
  border: none;
 }
.is_favorite{
  margin: 0;
  width: 80rpx;
  height: 80rpx;
  border: none;
}
.addin_bro{
  background-color: #d5dfd7;
  font-size: 40rpx;
  margin: 50rpx;
  font-weight: bolder;
  color: #383be7;
  width: 4%;
}

.search_con .search_input{
  top: 25px;
  left: 10px;
  position: absolute;
  border: 1px solid rgb(214, 211, 211);
  width: 225px;
  height: 45px;
  border-radius: 100px;
  font-size: 17px;
  padding-left: 25px;/*此处要用padding-left才可以把光标往右移动15像素，不可以用text-indent*/
  color: #333;
  display: inline-block;
 }
 
 .search_con .search_btn{
   position: absolute;
 right: 15px;
 position: absolute;
 top: 27px;
  width: 85px;
  height: 43px;
  background: #56b273;
  color: #fff;
  border-radius: 50px;
  display: inline-block;
 }